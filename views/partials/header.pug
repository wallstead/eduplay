				.links
					if (userData)
						button 
							|#{userData[0].firstname} #{userData[0].lastname} 
							span(uk-icon="chevron-down")
						.dropdown(uk-dropdown='pos: bottom-right; animation: uk-animation-scale-up; duration: 100' class="uk-transform-origin-top-right")
							ul.uk-nav.uk-dropdown-nav
								li
									a(href='/my-games') My Games
								li
									a(href='/account') Account
								li.uk-nav-divider
								li
									a(href='/logout') Logout
					else
						a(href="teacher-signup")
							p Teacher Signup

		if messages
			if messages.warning
				if messages.warning.length
					.uk-alert-warning(uk-alert='').alert
						a.uk-alert-close(uk-close='')
						p
							| #{messages.warning}
			if messages.danger
				if messages.danger.length
					.uk-alert-danger(uk-alert='').alert
						a.uk-alert-close(uk-close='')
						p
							| #{messages.danger}
			if messages.success
				if messages.success.length
					.uk-alert-success(uk-alert='').alert
						a.uk-alert-close(uk-close='')
						p
							| #{messages.success}


