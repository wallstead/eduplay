                span(uk-icon='plus')

    .mygamesContent 
        each game in games 
            - var isMath = game.gametype == 'math' 
            - var isSpelling = game.gametype == 'spelling' 
            a(href='my-games/' + game.slug).gameBox
                    if isSpelling
                        div(class='gameIcon' style='background-image: url("public/img/abc.png")')
                    else if isMath
                        div(class='gameIcon' style='background-image: url("public/img/math.png")')
                    .gameInfo
                        h3 #{game.name}
                        //- p _ students added
                        //- p Average: _% correct
                    span(uk-icon="icon: chevron-right; ratio: 2")


