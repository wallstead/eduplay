include partials/header

- var isMath = gameData.gametype == 'math' 
- var isSpelling = gameData.gametype == 'spelling' 

.content.mygames
    ul.uk-breadcrumb
        li
            a(href='/my-games') My Games
        li
            a(href='#') #{title}

    .subheader
        h1 #{title}

    .gamedetailContent
    
            if isSpelling
                .spelling-game 
                    form(action='/update-game' method='POST')
                        input(type='hidden', name='id' value='' + gameData.id)
                        fieldset.uk-fieldset
                            legend.uk-legend Words
                            .uk-margin.wordsInGame
                                each word in gameData.options.words
                                    .uk-margin
                                        .uk-inline
                                            input.uk-input(type='text', name='words', value='' + word)
                                            button.uk-form-icon.uk-form-icon-flip(uk-icon='icon: close', type="button", class="delete-word")
                            .uk-margin
                                button(class="uk-button uk-button-primary", type="button", id="add-word-spelling") 
                                    |Add Word
                                    span(uk-icon='plus')
                        .uk-margin
                            button(class="uk-button uk-button-secondary") Update Game
            else if isMath
                .math-game 
                    form(action='/update-game' method='POST')
                        input(type='hidden', name='id' value='' + gameData.id)
                        fieldset.uk-fieldset
                            legend.uk-legend Problems
                            .uk-margin.problemsInGame
                                each problem in gameData.options.problems
                                    .uk-margin
                                        .uk-inline
                                            input.uk-input(type='text', name='problems', value='' + problem)
                                            button.uk-form-icon.uk-form-icon-flip(uk-icon='icon: close', type="button", class="delete-problem")
                            .uk-margin
                                button(class="uk-button uk-button-primary", type="button", id="add-word-math") 
                                    |Add Problem
                                    span(uk-icon='plus')
                        .uk-margin
                            button(class="uk-button uk-button-secondary") Update Game
            
            .game-information
                h3 Share with your students:
                .game-connection-link
                    input(type="text", value="www.eduplay.com/play/" + gameData.code)
                h3 See Results:
                .uk-margin
                    a(class="uk-button uk-button-secondary", href='/my-games/' + gameSlug + '/results') Student Results

